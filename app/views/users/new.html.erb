<div class="authentication_form">
  <h2>Please Register:</h2>

  <ul class="flashes">
    <% @user.errors.full_messages.each do |error| %>
      <li class="error"><%= error %></li>
    <% end %>
  </ul>

  <%= form_for @user do |b| %>
    <%= b.label :name %>
    <%= b.text_field :name %>

    <%= b.label :address %>
    <%= b.text_field :address %>

    <%= b.label :city %>
    <%= b.text_field :city %>

    <%= b.label :state %>
    <%= b.text_field :state %>

    <%= b.label :zip_code %>
    <%= b.text_field :zip %>

    <%= b.label :email %>
    <%= b.email_field :email %>
    <%= b.label :password %>
    <%= b.password_field :password %>
    <%= b.label :password_confirmation %>
    <%= b.password_field :password_confirmation %>

    <%= b.submit "Submit" %>
  <% end %>
</div>

<!DOCTYPE html>
<html>
<head>
  <title>Growlers to Go</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <meta charset="UTF-8">
  <title>Growlers To Go</title>
  <link rel="stylesheet" type="text/css" href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css">
  <link rel="stylesheet" href="http://s3.amazonaws.com/codecademy-content/courses/ltp/css/bootstrap.css">
  <link rel="stylesheet" href="main.css">

</head>

<body>
<div class="nav">
  <div class="container">
    <ul class="pull-left">
      <li><a href="/">Growlers to Go</a></li>
    </ul>
    <ul class = "pull-right">
      <% if current_user && current_user.admin? %>
        <li><a href="#">Welcome, <%= current_user.first_name %> <%= current_user.last_name %></a></li>
        <li><%= render partial: 'layouts/admin' %></li>
        <li><%= link_to 'Logout', sessions_path, :method => :delete %></li>

        <% elsif current_user %>
          <li><a href="#">Welcome, <%= current_user.first_name %> <%= current_user.last_name %></a></li>
        <li><%= link_to 'Logout', sessions_path, :method => :delete %></li>

          <% else %>
        <li><%= link_to 'Register/Login', new_session_path %></li>
      <% end %>

    </ul>
  </div>
</div>
<div class="jumbotron">
  <div class="container">
    <h1>Growlers to Go</h1>
  </div>
</div>



<%= yield %>

</body>
</html>
